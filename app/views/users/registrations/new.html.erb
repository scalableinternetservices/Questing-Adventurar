<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <p><%= f.label :username %><br />
    <%= f.text_field :username, class:"form-control" %></p>
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
  </div>

  <%= f.fields_for :profile, Profile.new do |profile_form| %>
    <div class="form-group">
      <%= profile_form.label :first_name %><br>
      <%= profile_form.text_field :first_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= profile_form.label :last_name %><br>
      <%= profile_form.text_field :last_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= profile_form.label :gender %><br>
      <%= profile_form.select :gender, [['Male', 'Male'], ['Female', 'Female']], {}, {class: "form-control"} %>
    </div>
    <div class="form-group">
      <%= profile_form.label :address %><br>
      <%= profile_form.text_field :address, class:"form-control" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
