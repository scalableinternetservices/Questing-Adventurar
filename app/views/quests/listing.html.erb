<p id="notice"><%= notice %></p>

<div class='container'>
  <div id='accepted' class='col-md-6'>
    <h1>Accepted Quests</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Questgiver</th>
          <th>Adventurer</th>
          <th>Title</th>
          <th>Price</th>
          <th>Description</th>
          <th>Post time</th>
          <th>Expiration time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% current_user.quests_accepted.each do |quest| %>
          <tr>
            <td><%= quest.questgiver.profile.username %></td>
            <td><%= quest.title %></td>
            <td><%= quest.price %></td>
            <td><%= quest.description %></td>
            <td><%= quest.post_time %></td>
            <td><%= quest.expiration_time %></td>
          </tr>
        <% end %>
        <% current_user.pending_quests.each do |quest| %>
          <tr class='info'>
            <td><%= quest.questgiver.profile.username %></td>
            <td><%= quest.title %></td>
            <td><%= quest.price %></td>
            <td><%= quest.description %></td>
            <td><%= quest.post_time %></td>
            <td><%= quest.expiration_time %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id='posted' class='col-md-6'>
    <h1>Posted Quests</h1>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Questgiver</th>
          <th>Adventurer</th>
          <th>Title</th>
          <th>Price</th>
          <th>Description</th>
          <th>Post time</th>
          <th>Expiration time</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% current_user.quests_posted.each do |quest| %>
          <tr>
            <td><%= quest.questgiver.profile.username %></td>
            <td><%= quest.title %></td>
            <td><%= quest.price %></td>
            <td><%= quest.description %></td>
            <td><%= quest.post_time %></td>
            <td><%= quest.expiration_time %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
