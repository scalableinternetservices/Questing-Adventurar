<%= form_for(@quest) do |f| %>
  <% if @quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% @quest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
     <%= f.text_area :description, rows: 6, cols: 50 %>
  </div>
  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br>
     <%= f.text_area :tag_list %>
  </div>
  <div class="field">
    <%= f.hidden_field :post_time, :value => Time.now %>
  </div>
  <div class="field">
    <%= f.label :expiration_time %><br>
    <%= f.datetime_select :expiration_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
