<p id="notice"><%= notice %></p>

<h1>Quest Listings</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Questgiver</th>
      <th>Adventurer</th>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Post time</th>
      <th>Expiration time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.questgiver %></td>
        <td><%= quest.adventurer %></td>
        <td><%= quest.title %></td>
        <td><%= quest.price %></td>
        <td><%= quest.description %></td>
        <td><%= quest.post_time %></td>
        <td><%= quest.expiration_time %></td>
        <td><%= link_to 'Show', quest %></td>
        <td><%= link_to 'Edit', edit_quest_path(quest) %></td>
        <td><%= link_to 'Destroy', quest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

