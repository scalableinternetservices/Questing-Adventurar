
<h1>Quest Postings</h1>

<table>
<% @quests.each do |quest| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

    <td class="list_description">
      <dl>
        <dt><%= quest.title %></dt>
        <dd><%= truncate(strip_tags(quest.description),
               length: 80) %></dd>
      </dl>
    </td>

  </tr>
<% end %>
</table>

