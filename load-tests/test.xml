  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="glocal_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">

      <!-- start out at the dashboard. -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <!-- visit the homepage and create a new account  -->
      <request>
        <http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, user is filling out new form -->
      <thinktime value="2" random="true"></thinktime>

      <!-- create a random number to make a unique username -->
      <setdynvars sourcetype="random_number" start="1000" end="9999999">
        <var name="random_username" />
      </setdynvars>

      <!-- set fields in sign up form -->
      <request subst="true">
        <http
          url='/users'
          version='1.1'
          method='POST'
          contents='user%5Busername%5D=%%_random_username%%&amp;user%5Bemail%5D=%%_random_username%%%40qa.com&amp;user%5Bpassword%5D=alburwong&amp;user%5Bpassword_confirmation%5D=alburwong&amp;user%5Bprofile_attributes%5D%5Bfirst_name%5D=albur&amp;user%5Bprofile_attributes%5D%5Blast_name%5D=wong&amp;user%5Bprofile_attributes%5D%5Bgender%5D=Male&amp;commit=Sign+up'>
        </http>
      </request>

      <!-- post to a new quest to the quest board.
           remember the url of the created community so we can delete it later -->
      <request subst="true">
        <dyn_variable name="created_quest_url" re="[Ll]ocation: (http://.*)\r"/>
        <dyn_variable name="created_quest_id" re="[Ll]ocation: http://.*/quests/(.*)\r"/>
        <http
          url='/quests'
          version='1.1'
          method='POST'
          content-type='application/json'
          contents='{&quot;quest&quot;:{&quot;title&quot;:&quot;aa&quot;,&quot;price&quot;:&quot;1&quot;,&quot;desciption&quot;:&quot;aaaa&quot;,&quot;post_time&quot;:&quot;2015-05-3010:30:00&quot;,&quot;expiration_time&quot;:&quot;2015-05-3010:30:00&quot;}}'>
        </http>
      </request>

      <!-- wait for up to 2 seconds, user decides to delete submission -->
      <thinktime value="2" random="true"></thinktime>

      <!-- delete the submission we just created -->
      <request subst="true">
        <http url="%%_created_quest_url%%" method="DELETE">
        </http>
      </request>

      <!-- wait for up to 2 seconds, user decides to delete community -->
      <thinktime value="2" random="true"></thinktime>

